{

	"theme_name": "defaultTheme",

	"acf_options": {
		"init": true,
		"page_title": "Theme Options",
		"menu_title": "Theme Options",
		"menu_slug": "theme-options",
		"subpages": {
			"general": {
				"page_title": "Theme General Settings",
				"menu_title": "General"
			},
			"header": {
				"page_title": "Theme Header Settings",
				"menu_title": "Header"
			},
			"footer": {
				"page_title": "Theme Footer Settings",
				"menu_title": "Footer"
			}
		}
	},

	"enqueue_styles": {
        "fonts": "//fonts.googleapis.com/css?family=Roboto:300,400,500,700,900",
        "bootstrap": "css/vendor/bootstrap/bootstrap.min.css",
        "slick": "css/vendor/slick/slick.css",
		"theme-styles": "css/style.css",
		"style": "style.css"
	},

	"enqueue_scripts": {
        "slick": "js/vendor/slick.min.js"
	},

	"enqueue_built_in_scripts": [

	],

	"register_nav_menus": {
        "primary": "Main Navigation",
		"mobile_primary": "Mobile - Main Navigation"
	},

	"theme_widgets_init": {
		"Primary": {
			"name": "Primary Widget Area",
			"id": "primary_widget_area"
		}
	},

	"enable_shortcodes_fix": true,

	"enable_thumbnails": true,

	"thumbnails": [
		[
			"thumbnail-content-image",
			350,
			192,
			true
		],
        [
            "slider-image-full",
            920,
            999,
            false
        ],
        [
            "main-logo",
            200,
            200,
            false
        ],
        [
            "full-width-block",
            900,
            999,
            false
        ],
        [
            "standard-width-block",
            570,
            999,
            false
        ]
	]
}

