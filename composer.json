{
    "config": {
        "preferred-install": "dist",
        "platform": {
            "php": "7.0"
        }
    },
    "repositories": [
        {
            "type": "path",
            "url": "packages/*/*",
            "options": {
                "symlink": false
            }
        },
        {
            "type": "vcs",
            "url": "git@bitbucket.org:829studios/829-blog-category-filters-react.git"
        },
        {
            "type": "vcs",
            "url": "git@bitbucket.org:829studios/acf-icon-picker.git"
        },
        {
            "type": "composer",
            "url": "https://wpackagist.org"
        }
    ],
    "require": {
        "php": ">=7.0",
        "composer/installers": "^1.4",
        "vlucas/phpdotenv": "^2.0.1",
        "johnpbloch/wordpress": "^5.0.3",
        "oscarotero/env": "^1.1.0",
        "roots/wp-password-bcrypt": "1.0.0",
        "roots/wp-config": "1.0.0",
        "filp/whoops": "*",
        "advanced-custom-fields-pro/advanced-custom-fields-pro": "^5.9.1",
        "acf-better-urls/acf-better-urls": "^1.0.0",
        "acf-navmenu/acf-navmenu": "^1.0.0",
        "eight29/eight29-filters-react": "^1.2.8",
        "acf-icon-picker/acf-icon-picker":  "^1.0.0",
        "gravityforms/gravityforms": "^2.3.2.11",
        "tablepress-responsive-tables/tablepress-responsive-tables": "^1.0.0",
        "wpackagist-plugin/classic-editor": "*",
		"wpackagist-plugin/wordpress-importer": "*",
		"wpackagist-plugin/regenerate-thumbnails": "*",
		"wpackagist-plugin/tablepress": "^1.9",
		"wpackagist-plugin/safe-svg": "^1.9",
		"wpackagist-plugin/wp-retina-2x": "^6.1",
		"wpackagist-plugin/bulk-page-creator": "^1.1",
		"wpackagist-plugin/duplicate-post": "*",
		"wpackagist-plugin/ewww-image-optimizer": "^6.0.1",
		"wpackagist-plugin/import-users-from-csv-with-meta": "*",
		"wpackagist-plugin/user-role-editor": "^4.42",
		"wpackagist-plugin/wordfence": "^7.1",
		"wpackagist-plugin/wordpress-seo": "*",
        "wpackagist-plugin/column-shortcodes": "^1.0",
        "wpackagist-plugin/the-events-calendar": "*",
        "wpackagist-plugin/post-types-order": "*",
        "the-events-calendar-filterbar/the-events-calendar-filterbar": "^5.0.2",
        "wpackagist-plugin/add-to-any": "^1.7"
    },
    "require-dev": {
        "wp-cli/wp-cli": "^2.0",
        "wp-cli/db-command": "^2.0",
        "wp-cli/search-replace-command": "^2.0",
        "wp-cli/rewrite-command": "^2.0",
        "wp-cli/core-command": "^2.0",
        "wp-cli/media-command": "^2.0"
    },
    "extra": {
        "wordpress-install-dir": "web/wp",
        "installer-paths": {
            "web/app/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
            "web/app/plugins/{$name}/": ["type:wordpress-plugin"],
            "web/app/themes/{$name}/": ["type:wordpress-theme"]
        }
    }
}
